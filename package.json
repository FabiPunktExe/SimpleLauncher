{
  "name": "simplelauncher",
  "version": "0.3.11",
  "description": "Launcher for SimpleClient",
  "main": "src/main.js",
  "scripts": {
    "start": "electron .",
    "build": "electron-builder --windows",
    "dist": "electron-builder build"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/FabiPunktExe/SimpleLauncher.git"
  },
  "author": "Fabi.exe",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/FabiPunktExe/SimpleLauncher/issues"
  },
  "homepage": "https://simpleclient.github.io",
  "dependencies": {
    "app-root-path": "^3.1.0",
    "child_process": "^1.0.2",
    "electron-is-dev": "^2.0.0",
    "os": "^0.1.2",
    "path": "^0.12.7"
  },
  "devDependencies": {
    "electron": "^25.2.0",
    "electron-builder": "^23.4.0"
  },
  "build": {
    "appId": "simpleclient.simplelauncher",
    "productName": "SimpleLauncher",
    "artifactName": "SimpleClient-${version}.${ext}",
    "icon": "src/gui/icon.ico",
    "win": {
      "target": "msi"
    },
    "msi": {
      "oneClick": true,
      "perMachine": false,
      "runAfterFinish": true,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true,
      "shortcutName": "SimpleClient"
    }
  }
}
